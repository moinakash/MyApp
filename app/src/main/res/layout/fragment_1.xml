<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment1"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true"/>


    <LinearLayout

        android:gravity="center"
        android:background="@color/design_default_color_secondary_variant"
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="TSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/name1"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Honorable Prime Minister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/name2"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Honorable Minister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/name3"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Secretary"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/name4"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Managing Director"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>



        <LinearLayout

            android:gravity="center"
            android:background="@color/design_default_color_secondary_variant"
            android:layout_width="match_parent"
            android:layout_height="30dp">


            <TextView
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="TSS-News / Notice / Office Order /NOC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <TextView
            android:text="@string/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>




    </ScrollView>

</LinearLayout>